{
  "name": "fontsampler",
  "version": "0.3.8",
  "description": "Wordpress plugin for testing webfonts; dev dependencies",
  "main": "js/main.js",
  "scripts": {
    "test": "libs",
    "js": "watchify js/main.js -o 'uglifyjs -c > js/fontsampler.js' -v -s 'Fontsampler'",
    "js-dev": "watchify js/main.js -o 'js/fontsampler.js' -v -s 'Fontsampler'",
    "build": "node r.js -o build.js",
    "build-admin": "node r.js -o build-admin.js",
    "less": "lessc css/fontsampler-css.less css/fontsampler-css.css",
    "less-admin": "lessc admin/css/fontsampler-admin.less admin/css/fontsampler-admin.css",
    "watch": "npm-watch"
  },
  "watch": {
    "less": {
      "patterns": [
        "css"
      ],
      "extensions": [
        "less"
      ]
    },
    "less-admin": {
      "patterns": [
        "admin/css"
      ],
      "extensions": [
        "less"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kontur/fontsampler-wordpress-plugin.git"
  },
  "author": "Johannes Neumeier",
  "license": "GNU",
  "bugs": {
    "url": "https://github.com/kontur/fontsampler-wordpress-plugin/issues"
  },
  "homepage": "https://github.com/kontur/fontsampler-wordpress-plugin",
  "devDependencies": {
    "browserify": "^16.2.3",
    "fontsampler-js": "file:../../../../../Packages/fontsampler-js",
    "npm-watch": "^0.3.0",
    "uglify-js": "^3.5.4"
  }
}
